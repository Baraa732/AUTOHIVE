{
  "info": {
    "name": "AUTOHIVE - Real-Time Notifications",
    "description": "Test real-time notification system for user registration and approval",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. User Registration",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "phone",
              "value": "1234567890",
              "type": "text"
            },
            {
              "key": "password",
              "value": "password123",
              "type": "text"
            },
            {
              "key": "password_confirmation",
              "value": "password123",
              "type": "text"
            },
            {
              "key": "role",
              "value": "tenant",
              "type": "text"
            },
            {
              "key": "first_name",
              "value": "John",
              "type": "text"
            },
            {
              "key": "last_name",
              "value": "Doe",
              "type": "text"
            },
            {
              "key": "birth_date",
              "value": "1990-01-01",
              "type": "text"
            },
            {
              "key": "profile_image",
              "type": "file",
              "src": "",
              "description": "Select profile image (max 2MB)"
            },
            {
              "key": "id_image",
              "type": "file",
              "src": "",
              "description": "Select ID/Passport image (max 2MB)"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/register",
          "host": ["{{base_url}}"],
          "path": ["api", "register"]
        },
        "description": "Register a new user with profile and ID images. This will send real-time notifications to all admins."
      }
    },
    {
      "name": "2. Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"admin_phone\",\n    \"password\": \"admin_password\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/login",
          "host": ["{{base_url}}"],
          "path": ["api", "login"]
        },
        "description": "Login as admin to get bearer token"
      }
    },
    {
      "name": "3. Get Pending Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/pending-users",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "pending-users"]
        },
        "description": "Get all users waiting for approval"
      }
    },
    {
      "name": "4. Get Admin Notifications",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/notifications",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "notifications"]
        },
        "description": "Get all admin notifications including user registrations"
      }
    },
    {
      "name": "5. Approve User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/approve-user/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "approve-user", "{{user_id}}"]
        },
        "description": "Approve a pending user. This will send real-time notification to the user."
      }
    },
    {
      "name": "6. Reject User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/reject-user/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "reject-user", "{{user_id}}"]
        },
        "description": "Reject a pending user. This will send real-time notification to the user."
      }
    },
    {
      "name": "7. User Login (After Approval)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"1234567890\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/login",
          "host": ["{{base_url}}"],
          "path": ["api", "login"]
        },
        "description": "Login as the approved user"
      }
    },
    {
      "name": "8. Get User Notifications",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/notifications",
          "host": ["{{base_url}}"],
          "path": ["api", "notifications"]
        },
        "description": "Get user notifications (approval/rejection)"
      }
    },
    {
      "name": "9. Get User Details",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/user-details/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "user-details", "{{user_id}}"]
        },
        "description": "Get detailed information about a specific user"
      }
    },
    {
      "name": "10. Test Admin Notification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test-notification",
          "host": ["{{base_url}}"],
          "path": ["api", "test-notification"]
        },
        "description": "Send a test notification to verify real-time broadcasting works"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ]
}
